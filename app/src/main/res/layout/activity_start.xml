<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/background_startActivity"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.lennert.chiro_activitytracker.startActivity.StartActivity">


        <DatePicker
            android:id="@+id/calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/bt_listChiroSaturdays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/bt_chiroWebsite"
            android:onClick="onClickOpenMainActivityButton"
            android:textSize="15sp"
            android:text="@string/list_chiroSaturdays"
            />

        <Button
            android:id="@+id/bt_chiroWebsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ic_chiro_herk_big"
            android:layout_centerHorizontal="true"
            android:text="@string/chirowebsite"
            android:onClick="onClickOpenChiroWebsiteButton"
            android:textSize="15sp"
            />
        <Button
            android:id="@+id/bt_saturdayProgram"
            android:onClick="onClickOpenProgramActivityButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/bt_listChiroSaturdays"
            android:text="@string/saturday_program"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/ic_chiro_herk_big"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:adjustViewBounds="true"
            android:layout_below="@+id/calendar"
            android:layout_centerHorizontal="true"
            android:src="@drawable/chiro_herk_big"
            />

    </RelativeLayout>
</ScrollView>



